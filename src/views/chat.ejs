                <form id="form-chat">
                    <input type="file" name="image">
                    <div>
                        <input id="chatBox" type="text" name="mensaje" placeholder="Escribe tu mensaje..." autocomplete="off">
                        <button type="submit">
                            <img src="https://img.icons8.com/color/48/null/filled-sent.png"/>
                        </button>
                    </div>
                </form>
            </div>
        </section>
